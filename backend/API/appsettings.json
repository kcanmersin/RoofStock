  "StockApiSettings": {
    "BaseUrl": "%STOCKAPI_BASEURL%",
    "BaseUrlHealth": "%STOCKAPI_BASEURLHEALTH%",
    "ApiKey": "%STOCKAPI_APIKEY%"
  },
  "Email": {
    "Smtp": {
      "Host": "%EMAIL_HOST%",
      "Port": "%EMAIL_PORT%",
      "Username": "%EMAIL_USERNAME%",
      "Password": "%EMAIL_PASSWORD%",
      "From": "%EMAIL_FROM%"
    }
  },
  "AppSettings": {
    "ConfirmationUrlBase": "http://localhost:5285/api/users/confirm-email"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://logstash:5044",
          "autoRegisterTemplate": true,
          "indexFormat": "logstash-{0:yyyy.MM.dd}"
        }
      }
